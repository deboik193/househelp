<div class="form-wrapper">

    <!-- logo -->
    <div id="logo">
        <h3 class="font-weight-bold text-primary">HouseHelp</h3>
    </div>
    <!-- ./ logo -->

    <h5>Create account</h5>

    <!-- form -->
    <form action="/basic" method="post" id="orderForm" onsubmit="checkform()">
        {{#if message}}
        <div class="alert alert-danger" role="alert">{{message}}</div>
        {{/if}}
        <div class="form-group">
            <input type="text" class="form-control" name="firstName" placeholder="Firstname" required autofocus>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="surname" placeholder="Lastname" required>
        </div>
        <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" required>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" required>
        </div>
        <div class="form-group">
            <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="customSwitch1" name="TCP" value="true" >
                <label class="custom-control-label" for="customSwitch1">Agree to the <a href="#"
                        class="text-primary">terms of service</a> and <a href="https://househelp.com.ng/privacy.html"
                        class="text-primary">privacy policy</a></label>
            </div>
        </div>
        
        <button class="btn btn-primary btn-block login">Register</button>
        <hr>
        <p class="text-muted">Already have an account?</p>
        <a href="/" class="btn btn-outline-light btn-sm">Sign in!</a>
    </form>
    <!-- ./ form -->

</div>