<div class="form-wrapper">

    <!-- logo -->
    <div id="logo">
        <h3 class="font-weight-bold text-primary">HouseHelp</h3>
    </div>
    <!-- ./ logo -->

    <h5 class="font-weight-medium">Sign in</h5>

    <!-- form -->
    <form action="/basic/change-password" method="post" id="orderForm" onsubmit="checkform()">
        {{#if message}}
        <div class="alert alert-danger" role="alert">{{message}}</div>
        {{/if}}
        <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="New Password" required autofocus>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="pass" placeholder="Confirm New Password" required>
        </div>
        <button class="btn btn-primary btn-block login" type="submit">Change Password </button>
    </form>
    <!-- ./ form -->

</div>